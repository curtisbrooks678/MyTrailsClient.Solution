@using MyTrailsClient.ViewModels;
@model RegisterViewModel
<div class="format-box row">
  <div class="col-9">
  <h3>Register a new user</h3>
  <hr />
  @using (Html.BeginForm("Register", "Account", FormMethod.Post))
  {
    @Html.LabelFor(user => user.Email, "Email:", new { @class="form-label" })
    @Html.TextBoxFor(user => user.Email, new { @class="form-control", required="required" })

    @Html.LabelFor(user => user.Password, "Password:", new { @class="form-label" })
    @Html.PasswordFor(user => user.Password, new { @class="form-control", required="required" })

    @Html.LabelFor(user => user.ConfirmPassword, "Confirm Password:", new { @class="form-label" })
    @Html.PasswordFor(user => user.ConfirmPassword, new { @class="form-control", required="required" })

    <input type="submit" value="Register" class="btn" />
  }
  </div>
</div>