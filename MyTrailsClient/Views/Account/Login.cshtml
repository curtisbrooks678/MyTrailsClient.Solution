@using MyTrailsClient.ViewModels
@model LoginViewModel

<div class="format-box row">
  <div class="col-9">
  
  @if (User.Identity.IsAuthenticated)
  {
    <h3>Account Access</h3>
    <hr />
    <h5>Hello @User.Identity.Name!</h5>
    <h5>Welcome to MyTrails.</h5>
    <h5>A place to track your favorite hiking trails and foraging spots.</h5>
    <br>
    <p>@Html.ActionLink("View My Trails", "Index", "UserTrails", new { @class ="link"})</p>
    <p>@Html.ActionLink("View My Journal Entries", "Index", "VisitEntries", new { @class ="link"})</p>
    <p>@Html.ActionLink("View 60 Trails in 60 Miles of PDX", "ExistingTrails", "Home", new { @class ="link"})</p>
    <p>@Html.ActionLink("Log out", "LogOut")</p>
    <hr />
  }
  else
  {
  <h3>Log into your account</h3>
  <hr />
  @using (Html.BeginForm())
  {
    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email, new { @class="form-control" })
    <br>
    @Html.LabelFor(m => m.Password)
    @Html.PasswordFor(m => m.Password, new { @class="form-control" })
    <br>
    <button type="submit" value="Log in" class="btn btn-primary">Log In</button>
  }
  <hr />
  <p>Don't have an account? @Html.ActionLink("Register Here", "Register").</p>
  }
  </div>
</div>