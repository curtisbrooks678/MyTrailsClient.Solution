@using MyTrailsClient.Models;

<h2>Trails</h2>

@if (@Model.Count == 0)
{
  <h3>No trails have been added yet!</h3>
}

<ul>
  @foreach(UserTrail userTrail in Model)
  {
    <li>@Html.ActionLink($"{userTrail.Name}", "Details", new { id = userTrail.UserTrailId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new trail", "Create")</p>