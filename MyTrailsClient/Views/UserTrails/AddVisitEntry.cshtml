@model MyTrailsClient.Models.UserTrail

<div class="format-box row">
  <div class="col-8">
  <h3>Add a Journal Entry to Trail: @Html.DisplayFor(m => m.Name)</h3>
  <hr />
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(m => m.UserTrailId)

  <div class = "form-label">@Html.Label("Select Journal Entry:")</div>
    @Html.DropDownList("VisitEntryId")

    <input type="submit" value="Save" class="btn"/>

  }
  <hr />
  <p>@Html.ActionLink("Back to MyTrails List", "Index")</p>
  </div>
  <div class="col-4">
    <img id="leaves-icon" src="/img/leaves.png" />
  </div>
</div>